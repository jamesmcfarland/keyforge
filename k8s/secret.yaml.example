apiVersion: v1
kind: Secret
metadata:
  name: keyforge-secret
  namespace: keyforge
type: Opaque
stringData:
  # Database password for PostgreSQL
  DB_PASSWORD: "keyforge_dev"
  
  # Admin API key for admin endpoints
  # Generate with: openssl rand -hex 32
  ADMIN_API_KEY: "your_secure_random_key_here"
  
  # JWT Authentication Configuration (optional)
  # Root JWT public key for verifying instance tokens
  # Generate a key pair using the JWT service
  # Format: Base64-encoded ECC P-256 public key in SPKI format
  ROOT_JWT_PUBLIC_KEY: "your_base64_encoded_public_key_here"
